{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2022",
    "outDir": "out",
    "rootDir": "src",
    "lib": ["ES2022"],
    "sourceMap": true,
    "strict": true,
    "types": ["node", "vscode"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["webview/**", "media/**", "out/**", "**/*.test.ts"]
}
