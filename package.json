{
  "name": "navify",
  "displayName": "Navify",
  "description": "Make large codebases easier to navigate",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:navify.searchView",
    "onCommand:navify.focus",
    "onCommand:navify.searchFiles"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "navify-container",
          "title": "Navify",
          "icon": "media/logo.png"
        }
      ]
    },
    "views": {
      "navify-container": [
        {
          "type": "webview",
          "id": "navify.searchView",
          "name": "File Search",
          "icon": "media/logo.png"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "navify.searchView",
        "contents": "Start typing to search your workspace.\n[Open Navify](command:navify.focus)"
      }
    ],
    "commands": [
      { "command": "navify.searchFiles", "title": "Navify: Fuzzy File Search" },
      { "command": "navify.focus", "title": "Navify: Focus File Search" }
    ],
    "menus": {
      "commandPalette": [
        { "command": "navify.focus" }
      ]
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  }
}
